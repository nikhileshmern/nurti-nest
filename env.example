# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=your_supabase_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# Razorpay Configuration
# IMPORTANT: Use test keys (rzp_test_xxx) for testing, live keys (rzp_live_xxx) for production
# Test keys will show "Test Mode" badge in payment modal
# Get keys from: https://dashboard.razorpay.com/app/keys
NEXT_PUBLIC_RAZORPAY_KEY_ID=your_razorpay_key_id  # rzp_test_xxx or rzp_live_xxx
RAZORPAY_KEY_SECRET=your_razorpay_key_secret
RAZORPAY_WEBHOOK_SECRET=your_razorpay_webhook_secret

# Shiprocket Configuration
SHIPROCKET_EMAIL=your_shiprocket_email
SHIPROCKET_PASSWORD=your_shiprocket_password
SHIPROCKET_BASE_URL=https://apiv2.shiprocket.in
SHIPROCKET_PICKUP_LOCATION="Your Warehouse Name"

# SMTP Email Configuration (choose one option below)
# Admin Email (receives order notifications)
ADMIN_EMAIL=Orders@nutrinest.in

# SMTP Settings
# Option 1: Gmail SMTP
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_SECURE=false
# SMTP_USER=your-email@gmail.com
# SMTP_PASSWORD=your-app-password
# SMTP_FROM="Nutri Nest <your-email@gmail.com>"

# Option 2: Custom Domain/cPanel SMTP (YOUR CHOICE!)
# SMTP_HOST=mail.nutrinest.in          # Or smtp.nutrinest.in
# SMTP_PORT=465                         # Or 587 (check with hosting)
# SMTP_SECURE=true                      # true for 465, false for 587
# SMTP_USER=Orders@nutrinest.in
# SMTP_PASSWORD=your-email-password
# SMTP_FROM="Nutri Nest <Orders@nutrinest.in>"

# Option 3: SendGrid SMTP
# SMTP_HOST=smtp.sendgrid.net
# SMTP_PORT=587
# SMTP_SECURE=false
# SMTP_USER=apikey
# SMTP_PASSWORD=your-sendgrid-api-key
# SMTP_FROM="Nutri Nest <noreply@yourdomain.com>"

# App Configuration
NEXT_PUBLIC_APP_URL=http://localhost:3000

# WhatsApp Configuration (Twilio)
# Get from: https://console.twilio.com
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_WHATSAPP_NUMBER=+14155238886  # Your Twilio WhatsApp number

# App Test Mode Configuration
# NOTE: This is separate from Razorpay test/live mode!
# This controls: Shiprocket mock data, Email logging, WhatsApp testing
# Razorpay test/live is controlled by your API key (rzp_test_xxx vs rzp_live_xxx)
# Set to false for production
NEXT_PUBLIC_TEST_MODE=false
TEST_MODE=false
